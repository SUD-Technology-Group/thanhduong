<div class='container product__container'>
    <div class='background'>
        <div class='background-image'>
            <div class='background-text'>
                <h1>Sản phẩm</h1>
                <h3>
                    <a href="/">Trang chủ</a> / Sản phẩm
                </h3>
            </div>
        </div>
    </div>
    <div class='container gird-content'>
        <div class='grid-content-left'>
            <ul>
                <h4>Danh mục sản phẩm</h4>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Gỗ
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Nhựa Mới
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Nhựa
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Nhựa Cũ
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Sóng Nhựa
                </li>
            </ul>
            <ul>
                <h4>Sản phẩm khuyến mãi</h4>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Gỗ
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Nhựa Mới
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Nhựa
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Pallet Nhựa Cũ
                </li>
                <li>
                    <i class='uil uil-arrow-right'></i>
                    Sóng Nhựa
                </li>
            </ul>
        </div>
        
        <div class='grid-content-right'>
            {{#each products}}
            <a href="products/{{_id}}" class='product-article'>
                <div class='product-image'>
                    <img
                        src='{{imgs.[0]}}'
                        alt='product-image'
                    />
                    <div class='product-heart'>
                        <i class='uil uil-heart'></i>
                    </div>
                    <div class='product-cart'>
                        <i class='uil uil-shopping-bag'></i>
                    </div>
                </div>
                <div class='product-info'>
                    <div class="product-color">
                        <div class="color product-color-black"></div>
                        <div class="color product-color-blue"></div>
                        <div class="color product-color-green"></div>
                        <div class="color product-color-gray"></div>
                        <div class="color product-color-red"></div>
                        <div class="color product-color-yellow"></div>
                    </div>
                    <div class='product-name'>
                        <h5>{{name}}</h5>
                    </div>
                    <div class='product-start'>
                        <i class='uil uil-favorite'></i>
                        <i class='uil uil-favorite'></i>
                        <i class='uil uil-favorite'></i>
                        <i class='uil uil-favorite'></i>
                        <i class='uil uil-favorite'></i>
                    </div>
                    <div class="product-price">
                        <p>{{price}}</p>
                    </div>
                </div>
            </a>
            {{/each}}
        </div>
    </div>
</div>