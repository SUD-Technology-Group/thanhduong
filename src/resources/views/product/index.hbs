<div class='container product__container'>
    <div class='background'>
        <div class='background-image'>
            <div class='background-text'>
                <h1>Sản phẩm</h1>
                <h3>
                    <a href='/'>Trang chủ</a>
                    / Sản phẩm
                </h3>
            </div>
        </div>
    </div>
    <div class='container gird-content'>
        <div class='grid-content-left'>
            <ul>
                <h4>Danh mục sản phẩm</h4>
                {{#each categories}}
                    {{#unless parent}}
                    <li>
                        <a href='#{{name}}' style='color: #333;' class="item__container">{{name}}</a>
                        {{#each ../categories}}
                            {{#if ../name}}
                                {{#equal ../name parent.name}}
                                    <div class="my-1"><a href="#{{name}}" class="text-dark">+ {{name}}</a></div>
                                {{/equal}}
                            {{/if}}
                        {{/each}}
                    </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class='grid-content-right'>
            {{#each categories}}
                {{#noChild name ../categories }}
                <div class="mb-3">
                    <div class='menu-title mb-4' id="{{name}}">{{name}}</div>
                    <div class='grid-content-right-product'>
                        {{#each ../products}}
                            {{#equal category.name ../name}}
                            <div class="card h-100 border-0">
                                <a href='products/{{slug}}' class='product-box'>
                                    <div class='product-img-box'>
                                        <img src='{{images.[0]}}' alt={{name}} class='w-100' />
                                    </div>
                                    <div class='product-content-box rounded-bottom card-body pt-0'>
                                        <div class='product-title h-50'>
                                            <a href='products/{{slug}}'>{{name}}</a>
                                        </div>
                                        <div class='product-price'>
                                            {{#if price.sale}}
                                                <p class="origin__price line-through">Giá: {{formatCurrency price.origin}}</p>
                                                <p class="sale__price">Giá khuyến mãi: {{formatCurrency price.sale}}</p>
                                            {{else}}
                                                <p class="origin__price">Giá: {{formatCurrency price.origin}}</p>
                                                <p class="sale__price" style="opacity: 0;">Giá khuyến mãi: None</p>
                                            {{/if}}
                                        </div>
                                        <button
                                            type='button'
                                            data-name='{{name}}'
                                            {{#if price.sale}}
                                                data-price='{{price.sale}}'
                                            {{else}}
                                                data-price='{{price.origin}}'
                                            {{/if}}
                                            data-image='{{images.[0]}}'
                                            class='btn btn-outline-info px-3 rounded-pil add-to-cart my-2'
                                        >Thêm vào giỏ hàng</button>
                                    </div>
                                </a>
                            </div>
                            {{/equal}}
                        {{/each}}
                    </div>
                </div>
                {{/noChild}}
            {{/each}}
        </div>
    </div>
</div>