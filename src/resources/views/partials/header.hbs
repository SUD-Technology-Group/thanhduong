<header id='page-header' class='sticky'>
    <div id='header-top' class='header-top'>
        <div class='container'>
            <div class='header-top--content'>
                <span class='header-hotline px-2'>
                    <i class='fas fa-envelope'></i>
                    palletthanhduong.vn@gmail.com
                </span>
                <span class='header-hotline px-2 mr-5'>
                    <i class='fas fa-phone'></i>
                    Hotline: 0971 632 793
                </span>
                <span class='header-hotline px-2'>
                    <span class='buy-box mx-2'>
                        <span> Mua ngay</span>
                    </span>
                </span>
            </div>
        </div>
    </div>
    <div class='container'>
        <div id='header-body' class='header-body'>
            <div id='header-logo' class='header-logo'>
                <a href='/' style='cursor: pointer;'>
                    <img src='/img/logo.png' alt='logo' />
                </a>
            </div>
            <div class='header-body--content'>
                <ul class='nav-menu'>
                    <li class='nav__menu__input'>
                        <input type='search' placeholder='Nhập từ khóa tìm kiếm' />
                    </li>
                    <li>
                        <a href='/'>Trang chủ</a>
                    </li>
                    <li>
                        <a href='/about'>Giới thiệu</a>
                    </li>
                    <li>
                        <a href='/products'>Sản phẩm
                            <i class='fa fa-angle-down'></i>
                        </a>
                        <ul class='sub-nav'>
                            {{#each categories}}
                                {{#unless parent}}
                                <li>
                                    <a href='/{{slug}}'>{{name}}</a>
                                    <ul class='sub-nav-inside'>
                                        {{#each ../categories}}
                                            {{#if ../name}}
                                                {{#equal ../name parent.name}}
                                                    <li><a href='/{{slug}}'>{{name}}</a></li>
                                                {{/equal}}
                                            {{/if}}
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/unless}}
                            {{/each}}
                        </ul>
                    </li>
                    <li>
                        <a href='/news'>Tin tức</a>
                    </li>
                    <li>
                        <a href='/contact'>Liên hệ</a>
                    </li>
                    <li>
                        <a href='/sales'>Ưu đãi</a>
                    </li>
                </ul>
            </div>
            <div class='header-right-corner'>
                <ul>
                    <li class='search__icon'>
                        <i class='fa fa-search'></i>
                        <span class='search__box__container'>
                            <div class='search__box'>
                                <form action='/products' method='get' class='d-flex'>
                                    <div class='search__box__left'>
                                        <input type='text' name='search' />
                                    </div>
                                    <div class='search__box__right'>
                                        <div class='searchGlass'>
                                            <button type='submit' class='btn p-0' style='color: #333;'>
                                                <i class='fa-solid fa-magnifying-glass'></i>
                                            </button>
                                        </div>
                                        <div class='spinner'>
                                            <i class='fa-solid fa-spinner'></i>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </span>
                    </li>
                    <li><i class='fa fa-user'></i></li>
                    <li>
                        <a href='/cart'>
                            <i class='fa fa-shopping-cart'></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class='header__responsive__icons'>
                <div class='header__responsive__icons__left'>
                    <i class='fa-solid fa-user'></i>
                    <a href='/cart' style='color: #333;'>
                        <i class='fa-solid fa-cart-shopping'></i>
                    </a>
                </div>
                <div class='header__responsive__icons__right'>
                    <button id='open-menu-btn' class='open-menu-btn'>
                        <i class='uil uil-bars'></i>
                    </button>
                    <button id='close-menu-btn' class='close-menu-btn'>
                        <i class='uil uil-multiply'></i>
                    </button>
                </div>
            </div>
        </div>
        <div id='header-body-2' class='header-body-2 d-none'>
            <div id='header-logo' class='header-logo text-center'>
                <a href='/' style='cursor: pointer;'>
                    <img src='/img/logo.png' alt='' />
                </a>
            </div>
            <div class='header-body--content'>
                <ul class='nav-menu-2'>
                    <li class='nav__menu__2__input'>
                        <input type='search' placeholder='Nhập từ khóa tìm kiếm' />
                    </li>
                    <li>
                        <a href='/'>Trang chủ</a>
                    </li>
                    <li>
                        <a href='/about'>Giới thiệu</a>
                    </li>
                    <li>
                        <a href='/products'>Sản phẩm
                            <i class='fa fa-angle-down'></i>
                        </a>
                        <ul class='sub-nav'>
                            {{#each categories}}
                                {{#unless parent}}
                                <li>
                                    <a href='/{{slug}}'>{{name}}</a>
                                    <ul class='sub-nav-inside'>
                                        {{#each ../categories}}
                                            {{#if ../name}}
                                                {{#equal ../name parent.name}}
                                                    <li><a href='/{{slug}}'>{{name}}</a></li>
                                                {{/equal}}
                                            {{/if}}
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/unless}}
                            {{/each}}
                        </ul>
                    </li>
                    <li>
                        <a href='/news'>Tin tức</a>
                    </li>
                    <li>
                        <a href='/contact'>Liên hệ</a>
                    </li>
                    <li>
                        <a href='/sales'>Ưu đãi</a>
                    </li>
                </ul>
                <div class='header__responsive__icons'>
                    <div class='header__responsive__icons__left'>
                        <i class='fa-solid fa-user'></i>
                        <a href='/cart' style='color: #333;'>
                            <i class='fa-solid fa-cart-shopping'></i>
                        </a>
                    </div>
                    <div class='header__responsive__icons__right'>
                        <button id='open-menu-btn' class='open-menu-btn-2'>
                            <i class='uil uil-bars'></i>
                        </button>
                        <button id='close-menu-btn' class='close-menu-btn-2'>
                            <i class='uil uil-multiply'></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class='header-right-corner'>
                <ul>
                    <li class='search__icon__2'>
                        <i class='fa fa-search'></i>
                        <span class='search__box__container__2'>
                            <div class='search__box__2'>
                                <form action='/products' method='get' class='d-flex'>
                                    <div class='search__box__left__2'>
                                        <input type='text' name='search' />
                                    </div>
                                    <div class='search__box__right__2'>
                                        <div class='searchGlass__2'>
                                            <button type='submit' class='btn p-0' style='color: #333;'>
                                                <i class='fa-solid fa-magnifying-glass'></i>
                                            </button>
                                        </div>
                                        <div class='spinner__2'>
                                            <i class='fa-solid fa-spinner'></i>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </span>
                    </li>
                    <li><i class='fa fa-user'></i></li>
                    <li>
                        <a href='/cart'>
                            <i class='fa fa-shopping-cart'></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

